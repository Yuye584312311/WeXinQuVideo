@import "../../template/mulit-video-item/mulit-video-item.wxss";
@import "../../template/message/message.wxss";

.content{
  width: 100%;
  height: 100%;
  overflow-x: hidden
}  
.root-group{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column
}

.follow-content{
   width: 100%;
   height: 100%;
   display: flex;
   flex-direction: column;
   text-align: center;
   font-family: 微软雅黑;
   line-height: 1200rpx;
   font-size: 50px
   
}

.left,.right{
  display: inline-block;
  vertical-align: top;
  width: 50%;
  overflow: hidden;
  justify-content: center;
  text-align: center
}

.right{
  float: right
}

/*加载中  */

.loading-tip {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
  text-align: center;
  align-content: center;
  color: #ccc
}
