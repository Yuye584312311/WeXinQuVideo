/*横向的视频推荐列表  */

.horizontal-video-list {
  display: flex;
  width: 100%;
  padding-bottom: 10rpx;
  white-space: nowrap;
  flex-direction: row;
  overflow-x: scroll
}

.empty-view {
  width: 20rpx
}

.horizontal-video-list-group-view {
  margin-left: 10rpx;
  margin-right: 10rpx
}

.horizontal-video-list-item {
  display: inline-block;
  width: 180rpx;
  height: 270rpx;
  margin-left: 20rpx;
  position: relative;
  border-radius: 10rpx
}

.horizontal-video-item-cover-top {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: rgba(0, 0, 0, 0.26);
  border-radius: 10rpx
}

.horizontal-video-list-item-cover {
  width: 180rpx;
  height: 270rpx;
  position: absolute;
  border-radius: 10rpx
}

.horizontal-video-list-item-play {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  align-content: center
}

/*包裹播放图标居中样式  */

.horizontal-video-list-item-play-view {
  width: 100%;
  height: 100%;
  display: flex;
  position: relative;
  align-items: center;
  align-content: center;
  justify-content: space-around
}

/*播放次数 的父布局 */

.horizontal-play-count {
  bottom: 0;
  right: 0;
  position: absolute;
  padding-right: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  flex-direction: row
}

.horizontal-play-count-icon {
  width: 30rpx;
  height: 30rpx
}

.horizontal-video-list-item-count {
  font-size: 10px;
  margin-left: 3rpx;
  color: #fff
}
